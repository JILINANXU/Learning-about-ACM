#include <bits/stdc++.h>
using namespace std;
#define For(i,a,b) for(int i=(a);i<=(int)b;i++)
#define ll long long
const int N = 1e5+10;
ll n;
ll gcd(ll a,ll b){
	return b?gcd(b,a%b):a;
}
ll lcm(ll a,ll b){
	return a/gcd(a,b)*b;
}
struct node{
	ll a,b;
	bool operator <(const node &x){
		return a>x.a;
	}
}nd[N];
int main(){
	scanf("%lld",&n);
	ll lc = 1;
	ll num = 0;
	For(i,1,n){
		ll a,b;
		scanf("%lld%lld",&nd[i].a,&nd[i].b);
		nd[i].b %= nd[i].a;
	}
	sort(nd+1,nd+n+1);
	num = nd[1].b;
	lc = lcm(lc,nd[1].a);
	For(i,2,n){
		while(num<nd[i].b||num%nd[i].a!=nd[i].b) num += lc;
		lc = lcm(lc,nd[i].a);
	}
	printf("%lld",num);
	return 0;
}
