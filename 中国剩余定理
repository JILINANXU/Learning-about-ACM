#include <bits/stdc++.h>
using namespace std;
#define For(i,a,b) for(int i=(a);i<=(int)b;i++)
#define ll long long
int n;
ll gcd(ll a,ll b){
	return b?gcd(b,a%b):a;
}
ll lcm(ll a,ll b){
	return a*b/gcd(a,b);
}
int main(){
	scanf("%d",&n);
	ll lc = 1;
	ll num = 0;
	For(i,1,n){
		int a,b;
		scanf("%d%d",&a,&b);
		//printf("num=%d,lc=%d\n",num,lc);
		if(i==1){
			num = b;
			lc = lcm(lc,a);
			continue;
		}
		while(num<b||(num-b)%a!=0){
			num += lc;
			//printf("num=%d\n",num);
			//system("pause");
		}
		lc = lcm(lc,a);
	}
	printf("%lld",num);
	return 0;
}
