#include <iostream>
#include <string>
#include <string.h>
#include <algorithm>
using namespace std;
#define For(i,a,b) for(int i=(a);i<=(int)b;i++)
#define ll long long
const int N = 3e7+10;
int p[N];
int main(){
	cin.tie(0);
	cout.tie(0);
	//while(!cin.eof()){
		memset(p,0,sizeof(p));
		string ss;
		string s = "$#";
		cin>>ss;
		For(i,0,ss.size()-1){
			s += ss[i];
			s += '#';
		}
		s += '^';
		int maxx = 0;
		int border = 0;
		int mid = 0;
		For(i,2,s.size()-2){
			if(i<=border) p[i] = min(p[mid*2-i],border-i+1);
			else p[i] = 1;
			while(s[i-p[i]]==s[i+p[i]]) p[i]++;
			if(i+p[i]>border){
				border = i+p[i]-1;
				mid = i;
			}
			maxx = max(maxx,p[i]);
		}
		cout<<maxx-1<<'\n';
	//}
	return 0;
}
